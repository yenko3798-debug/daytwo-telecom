generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // change to "sqlite" for local quick start
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  passwordHash  String
  balanceCents  Int      @default(0)   // $0.00 initially
  role          String   @default("user")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
